global:
  # By default, scrape targets every 15 seconds.
  scrape_interval: 15s

  # Attach these labels to any time series or alerts when communicating with
  # external systems (federation, remote storage, Alertmanager).
  external_labels:
    monitor: 'gdk-monitor'

# Scrape configuration
scrape_configs:
  # The job name is added as a label `job=<job_name>` to any timeseries scraped
  # from this configuration.
  - job_name: 'prometheus'
    static_configs:
      - targets: ['<%= config.prometheus.scrape_host %>:<%= config.prometheus.port %>']
  - job_name: 'gitlab'
    scrape_interval: 30s
    metrics_path: '/-/metrics'
    static_configs:
      - targets: ['<%= config.prometheus.scrape_host %>:<%= config.port %>']
  - job_name: 'gitaly'
    scrape_interval: 5s
    static_configs:
      - targets: ['<%= config.prometheus.scrape_host %>:<%= config.prometheus.gitaly_exporter_port %>']
  - job_name: 'praefect'
    scrape_interval: 5s
    static_configs:
      - targets: ['<%= config.prometheus.scrape_host %>:<%= config.prometheus.praefect_exporter_port %>']
  - job_name: 'gitlab-sidekiq'
    scrape_interval: 30s
    metrics_path: '/metrics'
    static_configs:
      - targets: ['<%= config.prometheus.scrape_host %>:<%= config.prometheus.sidekiq_exporter_port %>']
